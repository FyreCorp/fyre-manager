{
    "compilerOptions": {
        "strict": true,
        "outDir": "build",
        "target": "ES2024",
        "module": "NodeNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "noUncheckedIndexedAccess": true
    },
    "exclude": ["build", "node_modules"]
}